<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gdma.good2go"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    

    <application
        android:icon="@drawable/ic_app"
        android:label="@string/app_name" >
        <uses-library android:name="com.google.android.maps" />
         

        <activity
            android:label="@string/app_name"
            android:name=".MainScreen"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:label="@string/mapview_name"
            android:name=".MapTab" 
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        
        <activity
            android:label="@string/listview_name"
            android:name=".ListTab" >
        </activity>
        
        <activity
            android:label="@string/searchview_name"
            android:name=".FilterTab" >
        </activity>
        
     
        <activity
            android:label="@string/eventdetails_tabs"
            android:name=".EventDetails"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        
            
        <activity
            android:label="@string/countmein"
            android:name=".CountMeIn"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>

        <activity
            android:label="@string/meview_name"
            android:name=".MeTab" 
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>          
    </application>

</manifest>