<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    
	<TextView
        android:id="@+id/eventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"    
        android:textStyle="bold"
        android:text="Volunteering with kids"/>

    <EditText
        android:id="@+id/fbstatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"  
        android:layout_below="@id/eventname"
        android:inputType="textMultiLine"
        android:text="Adi Anna is awesome. She's going to volunteer with kids!"/>
    
     
    <TextView
        android:id="@+id/fbpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"    
        android:layout_below="@id/fbstatus"
        android:textStyle="bold"
        android:text="Share with friends?"/>
    
	<ToggleButton
	    android:id="@+id/fbposttoggleBtn"
	    android:layout_width="70dip"
	    android:layout_height="60dip"
	    android:layout_above="@+id/fbinvite"
	    android:layout_alignRight="@id/fbstatus"
	    android:layout_below="@id/fbstatus"
	    android:checked="true"
	    android:text="ToggleButton"
	    android:textOff="No"
	    android:textOn="Yes"
	    android:textSize="10dp" />
         
    <TextView
        android:id="@+id/fbinvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"    
        android:layout_below="@id/fbpost"
        android:textStyle="bold"
        android:text="Invite ..."/>
    
     <Button
        android:id="@+id/fbinvitebtn"
        android:layout_width="70dip"
        android:layout_height="40dip"
		
        android:layout_below="@id/fbposttoggleBtn"
        android:layout_alignRight="@id/fbposttoggleBtn"
        android:text=">" />
     
     


	<Button
        android:id="@+id/countmeinbtn2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"    
        android:layout_below="@id/fbinvite"
        android:text="Count Me In!" />



</RelativeLayout>