<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <ImageView
        android:id="@+id/eventPicList" 
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="0dip"
        android:layout_marginTop="0dip"
        android:src="@drawable/child_event" />
    
	<TextView
		android:id="@+id/eventname_entry"
		android:layout_width="180dip"
		android:layout_height="wrap_content"
        android:layout_toRightOf="@id/eventPicList"
		style="@style/TextRegularList"
		
		android:singleLine="true"
		android:ellipsize="end"


		android:text="Playing with autistic kids Playing with autistic kids"/>
	
     <TextView
		android:id="@+id/eventinfo_entry"
		android:layout_width="180dip"
		android:layout_height="wrap_content"

		android:layout_below="@id/eventname_entry"
		android:layout_alignLeft="@id/eventname_entry"
		
		android:maxLines="2"
		android:ellipsize="marquee"
		android:marqueeRepeatLimit="marquee_forever"

		android:textSize="12dip"
		android:textColor="@color/app_secondary_color"

		android:text="Help autistic kids be awesome and do many other stuff. Help autistic kids be awesome and do many other stuff"/>

     <TextView
         android:id="@+id/eventdistance_entry"
         style="@style/TextRegular"
         
         android:layout_width="wrap_content"
         
         android:layout_marginTop="10dip"
         android:layout_alignParentRight="true"
         android:text="32.4 km"

         android:textSize="20dip" />
       
</RelativeLayout>